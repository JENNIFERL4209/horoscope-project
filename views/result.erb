<html>
  <head>
    <meta charset= "UTF-8">
    <meta name= "viewport" content= "width=device-width, initial-scale=1">
    <title><%=@user_sign.capitalize + "!" %></title>
    <link href= "https://fonts.googleapis.com/css?family=Berkshire+Swash" rel= "stylesheet">
    
    <link href= "https://fonts.googleapis.com/css?family=Nunito+Sans" rel= "stylesheet">
    <!-- bootstrap CSS -->
    <link rel= "stylesheet" href= "//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel= "stylesheet" href= "/resources/demos/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src= "https://code.jquery.com/jquery-1.10.2.js"></script>
    <script src= "https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src= "https://code.jquery.com/ui/1.12.1/jquery-ui.js">
    <script src= "https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src= "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel= "stylesheet" href= "css/style.css" type= "text/css">
    <script src= "js/script.js"></script> 
    
    <style>
      #wallpaper {
        background-image: url("../images/wallpaper/<%=@user_sign%>.png") /*each sign has customized background*/
      }
      
      .text-background {
        background-color: black;
        opacity: 0.8;
        padding: 3%;
      } 
    
    </style>
  </head>
  <body>
    
    <div>
      <img src= "images/wallpaper/crystal.gif" id= "crystal_1">
      <img src= "images/wallpaper/crystal.gif" id= "crystal_2">
    </div>
    <div id= "wallpaper"></div>
      <div class= "container-fluid result">
        <div class = "row">
          <div class = "col-md-8 offset-md-2 text-background">
            <div class="text-color">
              <h1><%=@user_sign.capitalize + "!"%></h1><br>
              <%@daily_horoscope_hash.each do |information|%> <!--go through the hash and return each information in the hash-->
                <%=information[0].gsub("_"," ").capitalize%>
                <%=":" + " " + information[1]%></b><br><br>
              <% end %>
              <%= @user_lucky_number_fact %><br>
            </div>
            <div class= "container-fluid" id = "btn_div">
              <button class= "submit_btn" id= "shower"><span>Show Your Match</span></button>
              <button class= "submit_btn" id= "hider"><span>Hide</span></button>
            </div>
    
            <div id= "match">
                <h1><%=@user_compatibility.capitalize + "!"%></h1><br>
                <%@user_compatibility_hash.each do |information|%> <!--returns compatilbility based on user_sign-->
                  <%=information[0].gsub("_"," ").capitalize%>
                  <%=":" + " " + information[1]%></b><br><br>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    

    <script>
    // button to show compatibility
      $("#shower").click(function() {
        $("#match").first().show("fast", function showNext() {
          $(this).next("#match").show(1000,showNext);
        });
      });
       
      $("#hider").click(function() {
        $("#match").hide(1000);
      });
    </script>
  
  </body>
</html>

